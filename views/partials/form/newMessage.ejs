<form method="POST" action="/new-message">
    <div>
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" placeholder="My scary camping story" required>
    </div>

    <div>
        <label for="message">Message</label>
        <textarea type="text" id="message" name="text" rows="5" cols="50" required></textarea>
    </div>

    <div>
        <button type="submit">Post</button>
    </div>

</form>